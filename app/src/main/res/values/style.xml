<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/night_background_color</item>
    </style>

    <style name="MyAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/light_button1_color</item>
        <item name="colorPrimaryDark">@color/night_button2_color</item>
<!--        <item name="android:windowFullscreen">true</item>-->
        <item name="android:navigationBarColor">@color/light_button1_color</item>
    </style>

    <style name="MyAppButtonTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/night_button2_color</item>
        <item name="colorPrimaryDark">@color/night_background_color</item>
    </style>


    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/night_background_color</item>
        <item name="colorAccent">@color/night_accent_color</item>
        <item name="colorPrimaryVariant">@color/night_text_color</item>
    </style>

    <style name="CustomButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/night_background_color</item>
        <item name="colorAccent">@color/night_accent_color</item>
        <item name="colorPrimaryVariant">@color/night_text_color</item>
    </style>
</resources>
